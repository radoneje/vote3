extends ../layout
block head
block body


    include eventMenu
    script.
            document.querySelector(".eventMenuItem[menuid='9']").classList.add("active")
    .mainTower#app

        .eventBody.mt
            .linksWr.mb2
                .linkItem.mt.mb3
                    .linkTitle.mb Название
                    .switcherWr.mb(v-on:click="toogleTitle( 'isTitle')" v-bind:class="{active:title.isTitle}")
                        .switcherBox
                            .switcherElem
                            .switcherCap
                        .switcherTextOff Выключено, пользователи не видят название
                        .switcherTextOn Включено, пользователи видят название
                    //.linkDescription.mb Эту ссылку можно отправить всем пользователям. Qr code можно использовать для быстрого доступа с мобильных устройств.
                    .vItemTitle
                        input(v-model="title.title" placeholder="Введите название" v-on:change="changeTitle()")
                .linkItem.mt.mb3
                    .linkTitle.mb Для спикера
                    .linkDescription.mb Эту ссылку можно открыть на планшете спикера для чтения вопросов и результатов голосований
                    .linkGroup
                        .linkText #{host}/s/#{event.short}
                        .linkCopy.btn Копировать
                .linkItem.mt.mb3
                    .linkTitle.mb Для помощника
                    .linkDescription.mb Эту ссылку можно открыть на планшете помощника для модерации вопросов
                    .linkGroup
                        .linkText #{host}/s/#{event.short}
                        .linkCopy.btn Копировать
                .linkItem.mt.mb3
                    .linkTitle.mb Для экранов
                    .linkDescription.mb Эту ссылку можно показать на экране в полноэкренном режиме для вывода голосований
                    .linkGroup
                        .linkText #{host}/s/#{event.short}
                        .linkCopy.btn Копировать
                .linkItem.mt.mb3
                    .linkTitle.mb Статистика
                    .linkDescription.mb Здесь можно загрузить файл Excel со всеми заданными вопросами и проведенными голосованиями
                    .linkGroup
                        .linkText #{host}/s/#{event.short}
                        .linkCopy.btn Копировать


    script(src="/scripts/eventScript.js")
    script(src="/scripts/vue.min.js")
    script(src="/scripts/eventQScript.js")
